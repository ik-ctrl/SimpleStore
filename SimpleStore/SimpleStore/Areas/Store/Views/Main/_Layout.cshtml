<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Барахолка</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm  navbar-dark bg-dark border-bottom mb-2">

            <div class="container">
                <a asp-area="store" asp-controller="main" asp-action="index">
                    <img width="100" height="100" src="~/images/main_logo.png" />
                </a>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapsedMenu" aria-expanded="false" aria-controls="collapsedMenu">
                            Категория
                        </button>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline">
                            <select>
                                <option value="All">Везде</option>
                                <option value="books">Книги</option>
                            </select>
                            <input class="form-control" type="search" name="searchigItem" placeholder="Введите название товара" area-label="Поиск..." />
                            <button class="btn btn-primary" type="submit">Поиск</button>
                        </form>
                    </li>
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a>
                                <img src="~/images/icons/cabinet/unknown_80px.png" />
                            </a>
                        }
                        else
                        {
                            <a>
                                <img src="~/images/icons/cabinet/unknown_80px.png" />
                            </a>
                        }
                    </li>
                    <li>
                        <a>
                            <img src="~/images/icons/orders/orders_60px.png"/>
                        </a>
                    </li>
                    <li>
                        <a>
                            <img src="~/images/icons/cart/shopping_cart_80px.png"/>
                        </a>
                    </li>

                </ul>

                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@

                <!--<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">-->
                @*</div>*@
            </div>
        </nav>
        @*набор кнопок с категориями*@
        <div class="collapse" id="collapsedMenu">
            <div>тест</div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
