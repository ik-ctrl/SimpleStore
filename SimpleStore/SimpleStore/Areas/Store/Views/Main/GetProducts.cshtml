@model SimpleStore.ViewModels.StoreViewModels.ProductsViewModel
@{
    Layout = "_Layout";
}

@if (Model.ProductsCount != 0)
{
    @foreach (var vm in Model.Products)
    {
        <div>@vm.Name | @vm.Price</div>
    }

    @for (var pageNumber = 1; pageNumber <= Model.FinalPageNumber; pageNumber++)
    {
        <a href="/store/main/getproducts/@pageNumber">@pageNumber</a>
    }

}
else
{
    <div>Товары отсутвуют</div>
}



